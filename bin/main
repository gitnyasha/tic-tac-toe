#!/usr/bin/env ruby


while true
    puts "Player 1 choose between X and O"
    player_one = gets.chomp

    puts "1 | 2 | 3"
    puts "4 | 5 | 6"
    puts "7 | 8 | 9"
    puts "Type the number of the box you want to put your #{player_one}"
    player_one = gets.chomp
    puts "Your move is diplayed on the board"
    puts "X | 2 | 3"
    puts "4 | 5 | 6"
    puts "7 | 8 | 9"
    puts "Player 2 choose the box you want"
    player_two = gets.chomp
    puts "Your move is diplayed on the board"
    puts "X | 2 | 3"
    puts "4 | O | 6"
    puts "7 | 8 | 9"
    puts "Player 1 choose the box you want"
    player_one = gets.chomp
    puts "Your move is diplayed on the board"
    puts "X | X | 3"
    puts "4 | O | 6"
    puts "7 | 8 | 9"
    puts "Player 2 choose the box you want"
    player_two = gets.chomp
    puts "Your move is diplayed on the board"
    puts "X | X | O"
    puts "4 | O | 6"
    puts "7 | 8 | 9"
    puts "Player 1 choose the box you want"
    player_one = gets.chomp
    puts "Your move is diplayed on the board"
    puts "X | X | O"
    puts "X | O | 6"
    puts "7 | 8 | 9"
    puts "Player 2 choose the box you want"
    player_two = gets.chomp
    puts "Your move is diplayed on the board"
    puts "X | X | O"
    puts "X | O | 6"
    puts "O | 8 | 9"

    puts "Player 2 wins"
    puts "Do you want to play again? Y/N"
    break
end